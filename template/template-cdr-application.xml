<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>7.0</version>
    <date>2025-08-01T00:00:00Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template CDR Processing Application</template>
            <name>Template CDR Processing Application</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <items>
                <item>
                    <name>CPU Utilization</name>
                    <key>system.cpu.util</key>
                    <type>0</type>
                    <value_type>0</value_type>
                    <delay>30s</delay>
                </item>
                <item>
                    <name>CDR Collection Service - Port 3001</name>
                    <key>net.tcp.service[custom,3001]</key>
                    <type>0</type>
                    <value_type>3</value_type>
                    <delay>30s</delay>
                </item>
                <item>
                    <name>CDR Backlog File Count</name>
                    <key>vfs.dir.count[/cdr/incoming]</key>
                    <type>0</type>
                    <value_type>3</value_type>
                    <delay>60s</delay>
                </item>
            </items>
            <triggers>
                <trigger>
                    <description>High CPU usage on CDR Application</description>
                    <expression>{Template CDR Processing Application:system.cpu.util.last()}>85</expression>
                    <priority>4</priority>
                </trigger>
                <trigger>
                    <description>CDR Collection Service is DOWN (Port 3001)</description>
                    <expression>{Template CDR Processing Application:net.tcp.service[custom,3001].last()}=0</expression>
                    <priority>5</priority>
                </trigger>
                <trigger>
                    <description>CDR Parsing Backlog Too High</description>
                    <expression>{Template CDR Processing Application:vfs.dir.count[/cdr/incoming].last()}>50</expression>
                    <priority>4</priority>
                </trigger>
            </triggers>
        </template>
    </templates>
</zabbix_export>
